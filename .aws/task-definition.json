{
  "family": "AssistAPIServer-task",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::443370716139:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "redis",
      "image": "redis:7.4.2-alpine",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 6379,
          "protocol": "tcp"
        }
      ],
      "command": ["redis-server", "--appendonly", "yes", "--appendfsync", "everysec"],
      "healthCheck": {
        "command": ["CMD", "redis-cli", "ping"],
        "interval": 5,
        "timeout": 3,
        "retries": 5,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/AssistAPIServer-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "redis"
        }
      }
    },
    {
      "name": "stockassist",
      "image": "46112/tuzain:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_DATA_REDIS_HOST", "value": "localhost" },
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" }
        // 여기 나머지 환경 변수들도 여기에 추가
      ],
      "dependsOn": [
        {
          "containerName": "redis",
          "condition": "HEALTHY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/AssistAPIServer-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "stockassist"
        }
      }
    }
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
